    <div class="row">
      <div class="col-6 offset-2 fmbox">
    <form action="/listings/bookcnf" >
        <div class="mb-3">
            <label class="form-label" for="name">Your Name</label>
            <input class="form-control" type="text"  name="visitor_name" placeholder="Nithin reddy" pattern=[A-Z\sa-z]{3,20} required>
          </div>
          <div class="mb-3">
            <label class="form-label" for="email">Your E-mail</label>
            <input class="form-control" type="email" id="email" name="visitor_email" placeholder="jeerunithin3@email.com" required>
          </div>
          <div class="elem-group mb-3">
            <label class="form-label" for="phone">Your Phone</label>
            <input class="form-control" type="tel" id="phone" name="visitor_phone" placeholder="9398231189" pattern=(\d{3})-?\s?(\d{3})-?\s?(\d{4}) required>
          </div>
          
          <div  class="elem-group inlined mb-3">
            <label class="form-label" for="adult">Adults</label>
            <input class="form-control" type="number" id="adult" name="total_adults" placeholder="2" min="1" required>
          </div>
          <div class="elem-group inlined mb-3">
            <label class="form-label" for="child">Children</label>
            <input class="form-control" type="number" id="child" name="total_children" placeholder="2" min="0" required>
          </div>
          <div class="elem-group inlined mb-3">
            <label class="form-label" for="checkin-date">Check-in Date</label>
            <input class="form-control" type="date" id="checkin-date" name="checkin" required>
          </div>
          <div class="elem-group inlined mb-3">
            <label class="form-label" for="checkout-date">Check-out Date</label>
            <input class="form-control" type="date" id="checkout-date" name="checkout" required>
          </div>
          <div class="elem-group mb-3">
            <label class="form-label" for="room-selection">Select Room Preference</label>
            <select  class="form-control" id="room-selection" name="room_preference" required>
                <option value="">Choose a Room from the List</option>
                <option value="connecting">Connecting</option>
                <option value="adjoining">Adjoining</option>
                <option value="adjacent">Adjacent</option>
            </select>
          </div>
          
          <div class="elem-group mb-3">
            <label class="form-label" for="message">Anything Else?</label>
            <textarea  class="form-control" id="message" name="visitor_message" placeholder="Tell us anything else that might be important." required></textarea>
          </div>
          <button class="btn btn-success mb-3" type="submit">Book The Rooms</button>
    </form>
</div>
</div>

